<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <!-- Создание таблицы notification_logs -->

    <changeSet id="003-1" author="aqstream">
        <comment>Создание таблицы notification_logs для логирования отправок</comment>

        <createTable tableName="notification_logs" schemaName="notification_service">
            <!-- Primary key -->
            <column name="id" type="uuid">
                <constraints primaryKey="true" primaryKeyName="pk_notification_logs"/>
            </column>

            <!-- Recipient -->
            <column name="user_id" type="uuid">
                <constraints nullable="false"/>
            </column>

            <!-- Delivery info -->
            <column name="channel" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="template_code" type="varchar(50)"/>
            <column name="recipient" type="varchar(255)">
                <!-- telegram_chat_id для TELEGRAM, email для EMAIL -->
            </column>

            <!-- Content -->
            <column name="subject" type="varchar(255)">
                <!-- Тема письма (для EMAIL) -->
            </column>
            <column name="body" type="text">
                <constraints nullable="false"/>
            </column>

            <!-- Status -->
            <column name="status" type="varchar(20)" defaultValue="PENDING">
                <constraints nullable="false"/>
            </column>
            <column name="error_message" type="text"/>
            <column name="retry_count" type="integer" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>

            <!-- Timestamps -->
            <column name="sent_at" type="timestamptz"/>
            <column name="created_at" type="timestamptz" defaultValueComputed="now()">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <rollback>
            <dropTable tableName="notification_logs" schemaName="notification_service"/>
        </rollback>
    </changeSet>

    <changeSet id="003-2" author="aqstream">
        <comment>Индексы для таблицы notification_logs</comment>

        <!-- Индекс на user_id для поиска уведомлений пользователя -->
        <createIndex indexName="idx_notification_logs_user_id"
                     tableName="notification_logs"
                     schemaName="notification_service">
            <column name="user_id"/>
        </createIndex>

        <!-- Индекс на status для обработки pending уведомлений -->
        <createIndex indexName="idx_notification_logs_status"
                     tableName="notification_logs"
                     schemaName="notification_service">
            <column name="status"/>
        </createIndex>

        <!-- Индекс на created_at для сортировки и очистки старых записей -->
        <createIndex indexName="idx_notification_logs_created_at"
                     tableName="notification_logs"
                     schemaName="notification_service">
            <column name="created_at"/>
        </createIndex>

        <!-- Индекс для поиска по template_code -->
        <createIndex indexName="idx_notification_logs_template_code"
                     tableName="notification_logs"
                     schemaName="notification_service">
            <column name="template_code"/>
        </createIndex>

        <rollback>
            <dropIndex indexName="idx_notification_logs_template_code"
                       tableName="notification_logs"
                       schemaName="notification_service"/>
            <dropIndex indexName="idx_notification_logs_created_at"
                       tableName="notification_logs"
                       schemaName="notification_service"/>
            <dropIndex indexName="idx_notification_logs_status"
                       tableName="notification_logs"
                       schemaName="notification_service"/>
            <dropIndex indexName="idx_notification_logs_user_id"
                       tableName="notification_logs"
                       schemaName="notification_service"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
