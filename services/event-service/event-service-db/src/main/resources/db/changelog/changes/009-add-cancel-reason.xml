<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="009-1-add-cancel-reason" author="aqstream">
        <comment>Добавление полей cancel_reason и cancelled_at для событий</comment>

        <addColumn tableName="events" schemaName="event_service">
            <column name="cancel_reason" type="TEXT">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <addColumn tableName="events" schemaName="event_service">
            <column name="cancelled_at" type="TIMESTAMPTZ">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <rollback>
            <dropColumn tableName="events" schemaName="event_service" columnName="cancel_reason"/>
            <dropColumn tableName="events" schemaName="event_service" columnName="cancelled_at"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
