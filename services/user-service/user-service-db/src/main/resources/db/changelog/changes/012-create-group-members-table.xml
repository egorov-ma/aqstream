<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <!-- Таблица участников групп -->
    <changeSet id="012-create-group-members-table" author="aqstream">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="user_service" tableName="group_members"/>
            </not>
        </preConditions>

        <createTable schemaName="user_service" tableName="group_members"
                     remarks="Участники групп. Связывает пользователей с группами">
            <column name="id" type="UUID" defaultValueComputed="uuid_generate_v4()">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="group_id" type="UUID" remarks="FK -> groups">
                <constraints nullable="false"
                             foreignKeyName="fk_group_members_group_id"
                             references="user_service.groups(id)"
                             deleteCascade="true"/>
            </column>

            <column name="user_id" type="UUID" remarks="FK -> users">
                <constraints nullable="false"
                             foreignKeyName="fk_group_members_user_id"
                             references="user_service.users(id)"
                             deleteCascade="true"/>
            </column>

            <column name="invited_by" type="UUID" remarks="Кто пригласил (FK -> users, nullable для создателя)">
                <constraints foreignKeyName="fk_group_members_invited_by"
                             references="user_service.users(id)"/>
            </column>

            <column name="joined_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="NOW()"
                    remarks="Когда присоединился"/>

            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="NOW()">
                <constraints nullable="false"/>
            </column>

            <column name="updated_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="NOW()">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Уникальность: один пользователь — одна запись в группе -->
        <addUniqueConstraint
            schemaName="user_service"
            tableName="group_members"
            columnNames="group_id, user_id"
            constraintName="uq_group_members_group_user"/>

        <!-- Индексы для быстрого поиска -->
        <createIndex schemaName="user_service" tableName="group_members"
                     indexName="idx_group_members_group_id">
            <column name="group_id"/>
        </createIndex>

        <createIndex schemaName="user_service" tableName="group_members"
                     indexName="idx_group_members_user_id">
            <column name="user_id"/>
        </createIndex>

        <!-- Триггер для updated_at -->
        <sql splitStatements="false">
            CREATE TRIGGER trigger_group_members_updated_at
                BEFORE UPDATE ON user_service.group_members
                FOR EACH ROW
                EXECUTE FUNCTION user_service.update_updated_at_column();
        </sql>

        <rollback>
            <sql>DROP TRIGGER IF EXISTS trigger_group_members_updated_at ON user_service.group_members;</sql>
            <dropTable schemaName="user_service" tableName="group_members"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
