<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <!-- Таблица приглашений в организации -->
    <changeSet id="010-create-organization-invites-table" author="aqstream">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="user_service" tableName="organization_invites"/>
            </not>
        </preConditions>

        <createTable schemaName="user_service" tableName="organization_invites"
                     remarks="Приглашения в организации. Действительны 7 дней">
            <column name="id" type="UUID" defaultValueComputed="uuid_generate_v4()">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="organization_id" type="UUID" remarks="FK → organizations">
                <constraints nullable="false"
                             foreignKeyName="fk_org_invites_organization_id"
                             references="user_service.organizations(id)"
                             deleteCascade="true"/>
            </column>

            <column name="invite_code" type="VARCHAR(32)" remarks="Уникальный код приглашения">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="invited_by" type="UUID" remarks="Кто создал приглашение (FK → users)">
                <constraints nullable="false"
                             foreignKeyName="fk_org_invites_invited_by"
                             references="user_service.users(id)"
                             deleteCascade="true"/>
            </column>

            <column name="telegram_username" type="VARCHAR(100)"
                    remarks="Telegram username приглашённого (для отображения)"/>

            <column name="role" type="VARCHAR(20)" defaultValue="MODERATOR"
                    remarks="Роль приглашённого (только MODERATOR)">
                <constraints nullable="false"/>
            </column>

            <column name="expires_at" type="TIMESTAMP WITH TIME ZONE"
                    remarks="Когда истекает приглашение">
                <constraints nullable="false"/>
            </column>

            <column name="used_at" type="TIMESTAMP WITH TIME ZONE"
                    remarks="Когда приглашение было использовано"/>

            <column name="used_by" type="UUID" remarks="Кто использовал приглашение (FK → users)">
                <constraints foreignKeyName="fk_org_invites_used_by"
                             references="user_service.users(id)"/>
            </column>

            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="NOW()">
                <constraints nullable="false"/>
            </column>

            <column name="updated_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="NOW()">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Индексы -->
        <createIndex schemaName="user_service" tableName="organization_invites"
                     indexName="idx_org_invites_invite_code">
            <column name="invite_code"/>
        </createIndex>

        <createIndex schemaName="user_service" tableName="organization_invites"
                     indexName="idx_org_invites_organization_id">
            <column name="organization_id"/>
        </createIndex>

        <createIndex schemaName="user_service" tableName="organization_invites"
                     indexName="idx_org_invites_expires_at">
            <column name="expires_at"/>
        </createIndex>

        <!-- Check constraint для роли (только MODERATOR для приглашений) -->
        <sql>
            ALTER TABLE user_service.organization_invites
                ADD CONSTRAINT chk_org_invites_role
                CHECK (role = 'MODERATOR');
        </sql>

        <!-- Триггер для updated_at -->
        <sql splitStatements="false">
            CREATE TRIGGER trigger_org_invites_updated_at
                BEFORE UPDATE ON user_service.organization_invites
                FOR EACH ROW
                EXECUTE FUNCTION user_service.update_updated_at_column();
        </sql>

        <rollback>
            <sql>DROP TRIGGER IF EXISTS trigger_org_invites_updated_at ON user_service.organization_invites;</sql>
            <dropTable schemaName="user_service" tableName="organization_invites"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
