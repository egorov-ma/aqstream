<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <!-- Таблица для токенов привязки Telegram к email-аккаунту -->
    <changeSet id="013-create-telegram-link-tokens-table" author="aqstream">
        <comment>Создание таблицы telegram_link_tokens для привязки Telegram к email-аккаунту</comment>

        <createTable tableName="telegram_link_tokens" schemaName="user_service">
            <column name="id" type="UUID" defaultValueComputed="uuid_generate_v4()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="token" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="expires_at" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="used_at" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="true"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="NOW()">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Foreign key к users -->
        <addForeignKeyConstraint
            baseTableSchemaName="user_service"
            baseTableName="telegram_link_tokens"
            baseColumnNames="user_id"
            constraintName="fk_telegram_link_tokens_user"
            referencedTableSchemaName="user_service"
            referencedTableName="users"
            referencedColumnNames="id"
            onDelete="CASCADE"/>

        <!-- Уникальный индекс на token -->
        <createIndex
            indexName="idx_telegram_link_tokens_token"
            tableName="telegram_link_tokens"
            schemaName="user_service"
            unique="true">
            <column name="token"/>
        </createIndex>

        <!-- Индекс для поиска по user_id -->
        <createIndex
            indexName="idx_telegram_link_tokens_user_id"
            tableName="telegram_link_tokens"
            schemaName="user_service">
            <column name="user_id"/>
        </createIndex>

        <!-- Индекс для очистки истёкших токенов -->
        <createIndex
            indexName="idx_telegram_link_tokens_expires_at"
            tableName="telegram_link_tokens"
            schemaName="user_service">
            <column name="expires_at"/>
        </createIndex>

        <rollback>
            <dropTable tableName="telegram_link_tokens" schemaName="user_service"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
