<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <!-- Таблица членов организаций -->
    <changeSet id="009-create-organization-members-table" author="aqstream">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="user_service" tableName="organization_members"/>
            </not>
        </preConditions>

        <createTable schemaName="user_service" tableName="organization_members"
                     remarks="Члены организаций. Связывает пользователей с организациями">
            <column name="id" type="UUID" defaultValueComputed="uuid_generate_v4()">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="organization_id" type="UUID" remarks="FK → organizations">
                <constraints nullable="false"
                             foreignKeyName="fk_org_members_organization_id"
                             references="user_service.organizations(id)"
                             deleteCascade="true"/>
            </column>

            <column name="user_id" type="UUID" remarks="FK → users">
                <constraints nullable="false"
                             foreignKeyName="fk_org_members_user_id"
                             references="user_service.users(id)"
                             deleteCascade="true"/>
            </column>

            <column name="role" type="VARCHAR(20)" remarks="Роль: OWNER, MODERATOR">
                <constraints nullable="false"/>
            </column>

            <column name="invited_by" type="UUID" remarks="Кто пригласил (FK → users, nullable для OWNER)">
                <constraints foreignKeyName="fk_org_members_invited_by"
                             references="user_service.users(id)"/>
            </column>

            <column name="joined_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="NOW()"
                    remarks="Когда присоединился"/>

            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="NOW()">
                <constraints nullable="false"/>
            </column>

            <column name="updated_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="NOW()">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Уникальность: один пользователь — одна запись в организации -->
        <addUniqueConstraint
            schemaName="user_service"
            tableName="organization_members"
            columnNames="organization_id, user_id"
            constraintName="uq_org_members_org_user"/>

        <!-- Индексы для быстрого поиска -->
        <createIndex schemaName="user_service" tableName="organization_members"
                     indexName="idx_org_members_organization_id">
            <column name="organization_id"/>
        </createIndex>

        <createIndex schemaName="user_service" tableName="organization_members"
                     indexName="idx_org_members_user_id">
            <column name="user_id"/>
        </createIndex>

        <!-- Check constraint для роли -->
        <sql>
            ALTER TABLE user_service.organization_members
                ADD CONSTRAINT chk_org_members_role
                CHECK (role IN ('OWNER', 'MODERATOR'));
        </sql>

        <!-- Триггер для updated_at -->
        <sql splitStatements="false">
            CREATE TRIGGER trigger_org_members_updated_at
                BEFORE UPDATE ON user_service.organization_members
                FOR EACH ROW
                EXECUTE FUNCTION user_service.update_updated_at_column();
        </sql>

        <rollback>
            <sql>DROP TRIGGER IF EXISTS trigger_org_members_updated_at ON user_service.organization_members;</sql>
            <dropTable schemaName="user_service" tableName="organization_members"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
